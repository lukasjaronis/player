{
  "name": "vidstack-workspace",
  "version": "1.5.5",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run analyze build types --filter=./packages/* --filter=!./packages/playground/*",
    "build:vidstack": "turbo run analyze build types --filter=vidstack",
    "build:react": "turbo run analyze build types --filter=react",
    "clean": "turbo run clean",
    "format": "turbo run format --parallel",
    "test": "turbo run test --parallel",
    "preinstall": "npx only-allow pnpm && pnpx simple-git-hooks",
    "release": "pnpm build && node .scripts/release.js",
    "release:dry": "pnpm run release --dry",
    "validate": "turbo run build format test",
    "yalc:all": "pnpm build && for d in packages/*/; do echo $d; cd $d; yalc publish --push --replace --sig --changed; cd '../../'; done",
    "playground:prepare": "tsx .cli/playground-prepare.ts",
    "playground:dev": "tsx .cli/playground-dev.ts"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.1.0",
    "@types/fs-extra": "^11.0.1",
    "@types/minimist": "^1.2.5",
    "@types/node": "^16.0.0",
    "@types/prompts": "^2.4.8",
    "chokidar": "^3.5.0",
    "esbuild": "^0.19.4",
    "execa": "^6.0.0",
    "fs-extra": "^11.0.0",
    "globby": "^13.0.0",
    "kleur": "^4.1.5",
    "lint-staged": "^13.0.0",
    "minimist": "^1.2.5",
    "prettier": "^3.0.0",
    "prettier-plugin-tailwindcss": "^0.4.1",
    "prompts": "^2.4.2",
    "rimraf": "^3.0.0",
    "semver": "^7.3.0",
    "simple-git-hooks": "^2.8.0",
    "turbo": "^1.10.14",
    "typescript": "^5.2.2"
  },
  "simple-git-hooks": {
    "pre-commit": "npx --no-install lint-staged"
  },
  "lint-staged": {
    "*": "prettier --write"
  },
  "engines": {
    "node": ">=18",
    "pnpm": ">=8"
  },
  "volta": {
    "node": "18.17.1"
  },
  "packageManager": "pnpm@8.7.0"
}
